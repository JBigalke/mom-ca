  <xrx:variables>   
    <!-- Die user.xml des aktiven Users --> 
    <xrx:variable>
      <xrx:name>$user-profil</xrx:name>
      <xrx:expression>user:document($xrx:user-id)</xrx:expression>
    </xrx:variable>
    <!-- Der Vorname des Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-firstname</xrx:name>
      <xrx:expression>$user-profil//xrx:firstname</xrx:expression>
    </xrx:variable>
    <!-- Der Nachname des Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-name</xrx:name>
      <xrx:expression>$user-profil//xrx:name</xrx:expression>
    </xrx:variable>
    <!-- Der Informationstext des Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-aboutme</xrx:name>
      <xrx:expression>$user-profil//xrx:info/text()</xrx:expression>
    </xrx:variable>
    <!-- Der Name des Twitteraccounts aus der $user-profil -->
    <xrx:variable>
      <xrx:name>$user-twitter</xrx:name>
      <xrx:expression>$user-profil//xrx:twitter/xrx:twitteraccountname</xrx:expression>
    </xrx:variable>
    <!-- Die Private Emailadresse aus der $user-profil -->
    <xrx:variable>
      <xrx:name>$user-privateemail</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:mail</xrx:expression>
    </xrx:variable>
    <!-- Die Private Telephonnummer aus $user-profil-->
    <xrx:variable>
      <xrx:name>$user-privatephone</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:phone</xrx:expression>
    </xrx:variable>    
    <!-- Das Private Herkunftsland des User aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-privatecountry</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:address/xrx:country</xrx:expression>
    </xrx:variable> 
    <!-- Die "Private" Heimatsstadt es Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-privatecity</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:address/xrx:city</xrx:expression>
    </xrx:variable> 
    <!-- Die "Private" Postleitzahl des Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-privatepostalcode</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:address/xrx:postalcode</xrx:expression>
    </xrx:variable> 
    <!-- Die "Private" Straße des Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-privatestreet</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:address/xrx:street</xrx:expression>
    </xrx:variable> 
    <!-- Die "Private" Hausnummer des Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-privatehousenumber</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:address/xrx:housenumber</xrx:expression>
    </xrx:variable> 
    <!-- Der "Private" Facebooklink des User aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-privatefacebooklink</xrx:name>
      <xrx:expression>$user-profil//xrx:private/xrx:contact/xrx:address/xrx:facebook</xrx:expression>
    </xrx:variable>
    <!-- Der Institutsname aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutenname</xrx:name>
      <xrx:expression>$user-profil//xrx:institute-name</xrx:expression>
    </xrx:variable>
    <!-- Die Instituts-Email des User aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutionemail</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:mail</xrx:expression>
    </xrx:variable>
    <!-- Die Institutstelefonenummer des Users aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutionphone</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:phone</xrx:expression>
    </xrx:variable>    
    <!-- Das Land des Instituts aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutioncountry</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:address/xrx:country</xrx:expression>
    </xrx:variable> 
    <!-- Die Institutsstadt aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutioncity</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:address/xrx:city</xrx:expression>
    </xrx:variable> 
    <!-- Die Postleitzahl aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutionpostalcode</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:address/xrx:postalcode</xrx:expression>
    </xrx:variable> 
    <!-- Die Straße des Instituts aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutionstreet</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:address/xrx:street</xrx:expression>
    </xrx:variable> 
    <!-- Die Hausnummer des Insituts aus $user-profil -->
    <xrx:variable>
      <xrx:name>$user-institutionhousenumber</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:address/xrx:housenumber</xrx:expression>
    </xrx:variable>
    <!-- Der Facebooklink des Instituts--> 
    <xrx:variable>
      <xrx:name>$user-institutionfacebooklink</xrx:name>
      <xrx:expression>$user-profil//xrx:institution/xrx:contact/xrx:address/xrx:facebook</xrx:expression>
    </xrx:variable>
    <!-- alle Collections die dem User zuzordnen sind, sortiert nach Public, und Private Collections. -->
    <xrx:variable>
      <xrx:name>$user-collections</xrx:name>
      <xrx:expression>myProfil:sortCollections(metadata:base-collection('mycollection', 'private'))</xrx:expression>
    </xrx:variable>
    <!-- alle Private collections aus $user-collections -->
    <xrx:variable>
      <xrx:name>$user-privatecollections</xrx:name>
      <xrx:expression>$user-collections//xrx:privatecollections</xrx:expression>
    </xrx:variable>
    <!-- alle Public collections aus $user-collections -->
    <xrx:variable>
      <xrx:name>$user-publiccollections</xrx:name>
      <xrx:expression>$user-collections//xrx:publiccollections</xrx:expression>
    </xrx:variable>
    <!-- alle Conversations die der angemeldete User führt. -->
    <xrx:variable>
        <xrx:name>$user-conversations</xrx:name>
        <xrx:expression>$user-profil//xrx:conversations</xrx:expression>
    </xrx:variable>
    <!-- Informationen über das Gamification Profil des Users-->
    <xrx:variable>
        <xrx:name>$user-gamification</xrx:name>
        <xrx:expression>$user-profil//xrx:gamification</xrx:expression>
    </xrx:variable>
    <!-- Alle Freunde/ Freundschaftsanfragen usw. die dem User zugeordnet werden-->
    <xrx:variable>
        <xrx:name>$friends</xrx:name>
        <xrx:expression>$user-profil//xrx:friends</xrx:expression>
    </xrx:variable>   
  </xrx:variables>
