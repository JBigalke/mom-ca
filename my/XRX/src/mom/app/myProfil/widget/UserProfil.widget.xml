  <xrx:view> 
    <div> 
        <!-- Welcome to div --> 
           <div class="h2">
               <xrx:i18n>
                 <xrx:key>UserProfil-Welcome</xrx:key>
                 <xrx:default>Welcome to the Profile-Page of</xrx:default>
               </xrx:i18n>:{concat($user-profil//xrx:firstname , " ", $user-profil//xrx:name)}</div>
          <!-- Link to ../mom/profiles --> 
          <div><a href="{conf:param('request-root')}profiles">
               <xrx:i18n>
                 <xrx:key>UserProfil-OtherProfiles</xrx:key>
                 <xrx:default>Search Other Profiles</xrx:default>
               </xrx:i18n>
          </a></div>             
          <!-- contacts container --> 
          <div id='contacts-container'>
           <!-- Private Contacts -->
           {
           (: get visibility value :) 
           let $privatevisibility := $user-profil/xrx:user/xrx:profil/xrx:private/xrx:visibility
           return
           (: if visibility public show contacts :)
           if($privatevisibility/text()='public')then(
           	myProfil:createPrivateContactBox($user-privateemail,$user-privatephone, $user-privatecountry, $user-privatecity, $user-privatepostalcode, $user-privatestreet, $user-privatehousenumber, $user-privatefacebooklink )              
           )
           (: if visibility friends :)
            else if($privatevisibility/text()='friends') then(
           (: ..test friendship-status, if friendship = friendshipstatus =friendship show contacts :) 
            	if($friendship-status='friendship') then (myProfil:createPrivateContactBox($user-privateemail,$user-privatephone, $user-privatecountry, $user-privatecity, $user-privatepostalcode, $user-privatestreet, $user-privatehousenumber, $user-privatefacebooklink ))
			    else()
		   )
		   (: if visibility something else do nothing :)
		   else()
		   }
		   <!-- Institution contacts --> 
		   {
		   (: get institutionvisibility :)  
		   let $institutionvisibility := $user-profil/xrx:user/xrx:profil/xrx:institution/xrx:visibility
		    return 
		    (: if institutionvisibility = public show contacts :) 
			 if($institutionvisibility/text()='public')then(myProfil:createInsitutionContactBox($user-institutenname, $user-institutionemail, $user-institutionphone, $user-institutioncountry, $user-institutioncity, $user-privatepostalcode, $user-institutionpostalcode, $user-institutionstreet, $user-privatehousenumber, $user-institutionhousenumber, $user-institutionfacebooklink))
			(: if institutionvisibility= friends:) 
			 else if($institutionvisibility/text()='friends') then(
			(: ... test friendship-status, if status = friendship show contacts :)  
			      if($friendship-status='friendship')then (myProfil:createInsitutionContactBox($user-institutenname, $user-institutionemail, $user-institutionphone, $user-institutioncountry, $user-institutioncity, $user-privatepostalcode, $user-institutionpostalcode, $user-institutionstreet, $user-privatehousenumber, $user-institutionhousenumber, $user-institutionfacebooklink))
				else()
			 )
		    (: if institutionvisibility something else do nothing :)
			 else()}
		<!-- Twitter-Timeline -->	 
		<div id="Twitter-Timeline-Container"><a id="{$user-twitter}" style="display: none"></a></div>			          
		</div>
		<!-- About Me-->
    	<div class="inlinehead" id='aboutmehead'>
          <a href="javascript:showHideDiv('aboutme')" class="inlinehead-text">
            <xrx:i18n>
             <xrx:key>UserProfil-AboutMe</xrx:key>
             <xrx:default>About Me</xrx:default>
           </xrx:i18n>
          </a>
        </div> 
		<div id="aboutme" style="display: none" class="collections-container">{util:parse-html($user-aboutme)}</div>
		<!-- Published Collections -->
		<div class="inlinehead" id='publishedcollectionshead'>
            <a href="javascript:showHideDiv('publishedcollections')" class="inlinehead-text" >
               <xrx:i18n>
                 <xrx:key>UserProfil-PublishedCollections</xrx:key>
                 <xrx:default>Published Collections</xrx:default>
               </xrx:i18n>
            </a>
        </div> 
        <div id="publishedcollections" style="display: none" class="collections-container">{userProfil:buildPublicCollectionList($user-publiccollection-ids)}</div>
        <!--Gamification -->
        <div class="inlinehead" id='gamificationlisthead'>
            <a href="javascript:showHideDiv('gamification-points')" class="inlinehead-text" >
               <xrx:i18n>
                 <xrx:key>UserProfil-GamificationResults</xrx:key>
                 <xrx:default>Gamification Results</xrx:default>
               </xrx:i18n>
           </a>
        </div> 
        <div id="gamification-points" style="display: none" class="collections-container">{myProfil:gamificationresults($user-gamification)}</div>
        <!-- Not shown pop-up container for dialogs -->
        <div id="popup-container" style="display:none"></div>
        <!-- Create Friendship request --> 
          {
          (: test if user-loggedin :)
          if($user:is-loggedin)then (
          (: .. test if friendship-status, if status = false create link to javascriptfunction createRequestFriendshipPopup(name, uid) in myProfil.js :)
          	if($friendship-status='false') then(<div><a href='javascript:createRequestFriendshipPopup("{$user-name}","{$uuid}")'>Request Friendship</a></div>)
          (: if user not loggedin or friendshipstatus something else then false do nothing :)   
            else())
          else ()
           }
       <!-- not shown resources to create triangles in DropDown Menu see About Me etc. -->
       <div  id="Icons" style="display: none">
        <xrx:resource alt="einklappen" id="ein" type="image/png" class="ic">tag:www.monasterium.net,2011:/mom/resource/image/path_down</xrx:resource>
       </div> 
     </div>
  </xrx:view>
</xrx:widget>