    <xrx:portal>tag:www.monasterium.net,2011:/mom/portal/default</xrx:portal>
    <xrx:init>
        <xrx:processor>
            <xrx:xformsflag>false</xrx:xformsflag>
            <xrx:jqueryflag>true</xrx:jqueryflag>
        </xrx:processor>
    </xrx:init>
    <xrx:csss>
        <style type="text/css">

#archive{{
	position:relative;
	width:100%;
}}

#fonds{{
    position:relative;
}}

#harvester-list{{
    position:relative;
    left:20px;
}}

#add-new-harvester{{
    position:relative;
    left:20px;
}}

.resource-enabled{{
    position:relative;
    height:40px;
    width:100%;
    margin:2px;
    color:green;
    -moz-border-radius:5px;
    -webkit-border-radius:5px;
    -khtml-border-radius:5px;
    border-radius:5px;
    border:solid green 1px;
    float:left;
}}

.resource-disabled{{
    position:relative;
    width:100%;
    margin:2px;
    color:red;
    -moz-border-radius:5px;
    -webkit-border-radius:5px;
    -khtml-border-radius:5px;
    border-radius:5px;
    border:solid red 1px;
    float:left;
}}

.choose{{
    position:relative;
    right:1px;
    float:right;
}}

.URLenable{{
    position:relative;
    top:4px;
}}

.URLdisable{{
    display:none;
    position:relative;
    top:4px;
}}

.button{{
    background-image:url(bfResources/scripts/dijit/themes/tundra/images/buttonEnabled.png);
    border:solid #BDBDBD 1px;
    border-bottom:solid #848484 1px;
    padding: 1px 5px;
    cursor:pointer;
}}

.button:hover{{
    background-image:url(bfResources/scripts/dijit/themes/tundra/images/buttonHover.png);
}}

			</style>
