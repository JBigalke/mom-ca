  <xrx:title>
    <xrx:i18n>
      <xrx:key>change-password</xrx:key>
      <xrx:default>Change my password</xrx:default>
    </xrx:i18n>
  </xrx:title>
  <xrx:subtitle></xrx:subtitle>
  <xrx:description></xrx:description>
  <xrx:author>jochen.graf@uni-koeln.de</xrx:author>
